{
	"llvm-target":   "wasm32-unknown-unknown-wasm",
	"build-tags":    ["js", "wasm"],
	"goos":          "js",
	"goarch":        "wasm",
	"compiler":      "clang-8",
	"linker":        "wasm-ld",
	"cflags": [
		"--target=wasm32",
		"-nostdlibinc",
		"-Wno-macro-redefined",
		"-Oz"
	],
	"ldflags": [
		"--allow-undefined",
		"--export-all"
	],
	"emulator":      ["node", "targets/wasm_exec.js"]
}
